pipeline {
    agent any
    stages {
        stage('Git checkout') {
            steps { 
                git 'https://github.com/opedinas/sonar2.git'
            }


        }
        stage('Build') {
            steps {
               sh 'cd MywebApp && mvn clean package'
            } 
        }
        stage('test') {
            steps {
                sh 'cd MywebApp && mvn test'
            }
        }
        stage ('Code Qualty Scan') {
            
           steps {
                  withSonarQubeEnv('sonar') {
             sh "mvn -f MywebApp/pom.xml sonar:sonar"      
               }
            }
       }

        stage ('deploy to tomcat') {
            steps {
              deploy adapters: [tomcat9(credentialsId: '2ee6d9f2-dedf-449f-af47-8407588ede79', path: '', url: 'http://54.163.78.108')], contextPath: 'leadgen', war: '**/*.war'
            } 

                
            
        }
    
    }
    
}   
